{
  "name": "maskani-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "./node_modules/.bin/sequelize db:seed:undo:all",
    "undo-migrate": "./node_modules/.bin/sequelize db:migrate:undo:all",
    "migrate": "./node_modules/.bin/sequelize db:migrate",
    "seed": "./node_modules/.bin/sequelize db:seed:all",
    "refresh": "yarn undo-migrate && yarn migrate && yarn seed",
    "start": "yarn migrate && pm2-runtime app.js",
    "dev": "yarn migrate && nodemon ./app.js",
    "mocha": "nyc mocha --timeout=5000 --exit",
    "test": "export NODE_ENV=test && yarn refresh && yarn run mocha && yarn clean",
    "format": "prettier --write --config .prettierrc.json \"**/*.js\"",
    "lint": "eslint --fix --config .eslintrc.json \"**/*.js\"",
    "remark": "remark . -o"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn remark",
      "pre-push": "yarn test"
    }
  },
  "dependencies": {
    "@google-cloud/trace-agent": "^5.1.3",
    "axios": "^0.21.3",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.0.0",
    "date-fns": "^2.23.0",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.12.1",
    "helmet": "^3.23.0",
    "jsonwebtoken": "^8.5.1",
    "mailgun-js": "^0.22.0",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.6.0",
    "request-ip": "^2.1.3",
    "sequelize": "^6.29.0",
    "sequelize-cli": "^6.2.0",
    "trim-request": "^1.0.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.4.0",
    "eslint-config-formidable": "^4.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.3",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "prettier-eslint": "^11.0.0",
    "remark-cli": "^8.0.0"
  }
}
